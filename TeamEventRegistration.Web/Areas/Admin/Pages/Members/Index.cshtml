@page
@model TeamEventRegistration.Web.Areas.Admin.Pages.Members.IndexModel

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].NickName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].PhoneNumber)
            </th>
            <th>
                Address
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Member) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NickName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @if (string.IsNullOrEmpty(item.StreetAddress + item.City + item.State + item.ZipCode))
                {
                    <div>Not Provided</div>
                }
                else
                {
                    <div>
                    @Html.DisplayFor(modelItem => item.StreetAddress)<br />
                    @Html.DisplayFor(modelItem => item.City), @Html.DisplayFor(modelItem => item.State)  @Html.DisplayFor(modelItem => item.ZipCode)
                    </div>
                }

            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
